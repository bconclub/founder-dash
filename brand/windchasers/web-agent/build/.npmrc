# Production-optimized npm configuration
# Reduces install time and disk usage on VPS

# Only install production dependencies when NODE_ENV=production
# This is handled by npm ci --production flag, but this ensures consistency
production=true

# Reduce logging verbosity (faster installs)
loglevel=warn

# Use faster registry mirror (optional, uncomment if needed)
# registry=https://registry.npmjs.org/

# Disable package-lock updates during install (faster, safer)
package-lock=true

# Optimize for CI/CD environments
prefer-offline=false
audit=false
fund=false

# Cache configuration (if npm cache is available)
cache=.npm
prefer-dedupe=true

# Performance optimizations
legacy-peer-deps=false
strict-peer-deps=false
