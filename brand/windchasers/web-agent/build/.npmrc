# Production-optimized npm configuration
# Reduces install time and disk usage on VPS

# Note: production=true is commented out to allow devDependencies for builds
# TypeScript and other build tools are needed during the build process
# For production-only installs, use: npm ci --omit=dev
# production=true

# Reduce logging verbosity (faster installs)
loglevel=warn

# Use faster registry mirror (optional, uncomment if needed)
# registry=https://registry.npmjs.org/

# Disable package-lock updates during install (faster, safer)
package-lock=true

# Optimize for CI/CD environments
prefer-offline=false
audit=false
fund=false

# Cache configuration (if npm cache is available)
cache=.npm
prefer-dedupe=true

# Performance optimizations
legacy-peer-deps=false
strict-peer-deps=false
